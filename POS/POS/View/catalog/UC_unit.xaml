                  Height="35" Width="340"  Margin="10,5" IsEnabled="{Binding ElementName=cb_isSmallest, Path=}" />-->

                        <ComboBox x:Name="cb_smallestUnitId" Padding="10,5,5,5" TextBlock.Foreground="#4E4E4E"
                             materialDesign:HintAssist.Hint="Select Smallest Unit..."  
                             TextBlock.FontSize="12" Margin="10,5"
                             HorizontalAlignment="Center" VerticalAlignment="Center" 
                              Height="35" Width="340"     Background="#f8f8f8" 
                           BorderBrush="#737373"          BorderThickness="0"  Visibility="Collapsed"
                            FontFamily="Segoe UI"         Grid.Row="3" SelectionChanged="Cb_smallestUnitId_SelectionChanged" >

                        </ComboBox>
                        <Separator Background="#999999"   Width="360"  Margin="5,5,5,0"
                                      Grid.Row ="8" VerticalAlignment="Center" />
                    </Grid>

                </Grid>

                <Grid Grid.Row="1" Margin="5,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Button x:Name="btn_add" Grid.Row="0" Grid.Column="0"
                          Background="#4E4E4E" BorderBrush="{x:Null}"
                    Margin="1,0"    Content="Add" Click="Btn_add_Click" />
                    <Button x:Name="btn_update" Grid.Row="0" Grid.Column="1"
                        Background="#4E4E4E" BorderBrush="{x:Null}"
                   Margin="1,0"    Content="Update" Click="Btn_update_Click" />
                    <Button x:Name="btn_delete" Grid.Row="0" Grid.Column="2"
                        Background="#4E4E4E" BorderBrush="{x:Null}"
                    Margin="1,3"    Content="Delete" Click="Btn_delete_Click" Height="Auto" />

                </Grid>

            </Grid>
        </Border>
    </Grid>
</UserControl>
