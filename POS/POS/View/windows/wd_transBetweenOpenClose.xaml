                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="10"/>
                </Grid.RowDefinitions>
                <DataGrid x:Name="dg_transfers" Margin="5" Grid.Row="0" Grid.ColumnSpan="2"  Background="White"
                      materialDesign:DataGridAssist.CornerRadius="5" Visibility="Visible"
                         IsReadOnly="True" CanUserAddRows="False" 
                        AutoGenerateColumns="False" 
                        ColumnWidth="SizeToHeader"  >
                    <DataGrid.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"></SolidColorBrush>
                        <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="#e7f3fa" />
                            <Setter Property="BorderBrush" Value="White"/>
                            <Setter Property="BorderThickness" Value="0 0 1 0"/>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="*"  Header="Process number" Binding="{Binding Path=transNum}"/>
                        <DataGridTextColumn Width="*"  Header="Date"           Binding="{Binding Path=updateDate , StringFormat=d, Converter={StaticResource dateFrameConverter}}"/>
                        <DataGridTextColumn Width="*"  Header="Time"           Binding="{Binding Path=updateDate , StringFormat=t}"/>
                        <DataGridTextColumn Width="*" Header="Type" >
                            <DataGridTextColumn.Binding >
                                <MultiBinding Converter="{StaticResource transTypeClosingConverter}" >
                                    <Binding Path="transType" />
                                    <Binding Path="side" />
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                        <DataGridTextColumn Width="*"  Header="Description">
                            <DataGridTextColumn.Binding >
                                <MultiBinding Converter="{StaticResource closingDescriptonConverter}" >
                                    <Binding Path="transType" />
                                    <Binding Path="side" />
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                        <DataGridTextColumn Width="*"  Header="Cash"           Binding="{Binding Path =cash,Converter={StaticResource accuracyConverter }}"/>
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>
