                                <Grid.RowDefinitions >
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>


                                <Grid Grid.Row="1" >
                                    <Grid.RowDefinitions >
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>


                                    </Grid.RowDefinitions>

                                    <Grid Grid.ColumnSpan="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Base Infomation" Foreground="#737373"
                                     FontSize="10"  VerticalAlignment="Center" x:Name="txt_baseInformation"
                                            Margin="5" Grid.ColumnSpan="1"/>
                                        <Separator Background="#999999"   Width="250"  
                                          VerticalAlignment="Center" Grid.Column="1" />
                                        <Button x:Name="btn_clear" Grid.Column="3" Padding="0" 
                              Background="{x:Null}" BorderBrush="{x:Null}" 
                        Margin="5,0"   ToolTip="clear">

                                            <materialDesign:PackIcon Foreground="#178DD2" Kind="RefreshCircle"  
                                  HorizontalAlignment="Center" Grid.Column="0"  
                             VerticalAlignment="Center" Width="20" Height="20"/>
                                        </Button>
                                    </Grid>
                                    
                                    <Grid   Grid.Row="1"  Margin="5,0,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="tb_name"  Text="{Binding name, Mode=OneWay}" Padding="10,5,5,5"   
                                         BorderThickness="0,0,0,2" materialDesign:HintAssist.Hint="Name..."    
                               Foreground="#4E4E4E"  TextBlock.FontSize="12" Background="#f8f8f8"
                                     BorderBrush="AliceBlue" TextChanged="validationTextbox_TextChanged" LostFocus="validationControl_LostFocus"
                         HorizontalAlignment="Left" VerticalAlignment="Center" MaxLength="20" materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}"
                      Height="35" Width="340"  Margin="5,5,0,5" Grid.ColumnSpan="2" />

                                        <Path Fill="#E81123" Stretch="Fill" Margin="5,5,15,5" x:Name="p_errorName"
                                  HorizontalAlignment="Right"  Grid.Column="2"  Visibility="Collapsed" 
                             VerticalAlignment="Center" Width="15"  Height="15"
                                  Data="M12,2 C6.48,2 2,6.48 2,12 C2,17.52 6.48,22 12,22 C17.52,22 22,17.52 22,12 C22,6.48 17.52,2 12,2 Z M12,13 C11.45,13 11,12.55 11,12 L11,8 C11,7.45 11.45,7 12,7 C12.55,7 13,7.45 13,8 L13,12 C13,12.55 12.55,13 12,13 Z M13,17 L11,17 L11,15 L13,15 L13,17 Z">
                                            <Path.ToolTip>
                                                <ToolTip  x:Name="tt_errorName"  Content="Name Not Validate"  Style="{StaticResource ToolTipError}"/>
                                            </Path.ToolTip>
                                        </Path>
                                    </Grid>

                                    <Grid   Grid.Row="2"  Margin="0,0,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <ComboBox x:Name="cb_branch" Padding="10,5,5,5"  TextBlock.Foreground="#4E4E4E"
                             materialDesign:HintAssist.Hint="Store/Branch..."  
                           TextBlock.FontSize="12" Margin="3,5,2,5"
                     HorizontalAlignment="Center" VerticalAlignment="Center" 
                              Height="35" Width="340"     LostFocus="validationControl_LostFocus"
                                  Background="#f8f8f8"  SelectionChanged="validationCompobox_SelectionChanged"
                           BorderBrush="#737373"       BorderThickness="0" 
                            FontFamily="Segoe UI"   
                             Grid.Row="0">
                                        </ComboBox>
                                        <Path Fill="#E81123" Stretch="Fill" Margin="5,5,15,5" x:Name="p_errorSelectBranch"
                              HorizontalAlignment="Right"  Grid.Column="2"  Visibility="Collapsed" 
                         VerticalAlignment="Center" Width="15"  Height="15"
                              Data="M12,2 C6.48,2 2,6.48 2,12 C2,17.52 6.48,22 12,22 C17.52,22 22,17.52 22,12 C22,6.48 17.52,2 12,2 Z M12,13 C11.45,13 11,12.55 11,12 L11,8 C11,7.45 11.45,7 12,7 C12.55,7 13,7.45 13,8 L13,12 C13,12.55 12.55,13 12,13 Z M13,17 L11,17 L11,15 L13,15 L13,17 Z">
                                            <Path.ToolTip>
                                                <ToolTip  x:Name="tt_errorSelectBranch"  Content="Name Not Validate"  Style="{StaticResource ToolTipError}"/>
                                            </Path.ToolTip>
                                        </Path>
                                    </Grid>

                                    <Grid Grid.Row="3"  Margin="5,0,0,0" >
                                        <TextBox  x:Name="tb_note" Text="{Binding test, Mode=OneWay}"
                                                 Grid.Row="2" Padding="10,5,5,5"  
                                 materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}"
                                BorderThickness="1"  materialDesign:HintAssist.Hint="Note..."  
                               Foreground="#4E4E4E"  TextBlock.FontSize="12" Background="#f8f8f8"
                                 BorderBrush="#f8f8f8"
                                 HorizontalAlignment="Left" VerticalAlignment="Center" 
                            Grid.Column="1"  Height="70"  Width="330"  Margin="5,5"  TextWrapping="Wrap"/>
                                        <Path Fill="#E81123" Stretch="Fill" Margin="5,5,15,5"
                                  HorizontalAlignment="Right" Grid.Column="2"  Visibility="Collapsed"   
                             VerticalAlignment="Center" Width="15"  Height="15"
                                  Data="M12,2 C6.48,2 2,6.48 2,12 C2,17.52 6.48,22 12,22 C17.52,22 22,17.52 22,12 C22,6.48 17.52,2 12,2 Z M12,13 C11.45,13 11,12.55 11,12 L11,8 C11,7.45 11.45,7 12,7 C12.55,7 13,7.45 13,8 L13,12 C13,12.55 12.55,13 12,13 Z M13,17 L11,17 L11,15 L13,15 L13,17 Z">
                                            <Path.ToolTip>
                                                <ToolTip  Content="Name Not Validate"  Style="{StaticResource ToolTipError}"/>
                                            </Path.ToolTip>
                                        </Path>
                                    </Grid>
                                    <Separator Background="#999999"   Width="340"  Margin="5,0,5,0"
                                          Grid.Row="7" VerticalAlignment="Center" />
                                </Grid>
                               

                            </Grid>
                            <Grid Grid.Row="1" Margin="5,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <Button x:Name="btn_locations" Grid.Row="0" Grid.ColumnSpan="3"
                              Background="#4E4E4E" BorderBrush="{x:Null}" Click="Btn_locations_Click"
                        Margin="1,1"    Content="Locations"/>
                                <Button x:Name="btn_add" Grid.Row="1" Grid.Column="0"
                              Background="#4E4E4E" BorderBrush="{x:Null}"
                        Margin="1,1"    Content="Add"/>
                                <Button x:Name="btn_update" Grid.Row="1" Grid.Column="1"
                            Background="#4E4E4E" BorderBrush="{x:Null}"
                       Margin="1,1"    Content="Update"/>
                                <Button x:Name="btn_delete" Grid.Row="1" Grid.Column="2"
                            Background="#4E4E4E" BorderBrush="{x:Null}"
                       Margin="1,1"    Content="Delete"/>

                            </Grid>
                        </Grid>

                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
