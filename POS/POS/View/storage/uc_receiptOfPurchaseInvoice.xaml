                        <Grid Grid.Row="1" Margin="5"  >
                            <ComboBox   Grid.Row="1" x:Name="cb_branch"
                                           Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                             Padding="10,0,5,0"  TextBlock.Foreground="#4E4E4E"
                                            materialDesign:HintAssist.Hint="Store/Branch... "  
                                            TextBlock.FontSize="12"   Background="#f8f8f8" 
                                            Height="40"  
                                                LostFocus="input_LostFocus"
                                            BorderBrush="#737373" BorderThickness="0" SelectionChanged="Cb_branch_SelectionChanged" />
                            <Path Fill="#E81123" Stretch="Fill" Margin="5,5,15,5"
                                              Name="p_errorBranch"
                                                HorizontalAlignment="Right" Grid.Column="2"  Visibility="Collapsed"   
                                                VerticalAlignment="Center" Width="15"  Height="15"
                                                Data="M12,2 C6.48,2 2,6.48 2,12 C2,17.52 6.48,22 12,22 C17.52,22 22,17.52 22,12 C22,6.48 17.52,2 12,2 Z M12,13 C11.45,13 11,12.55 11,12 L11,8 C11,7.45 11.45,7 12,7 C12.55,7 13,7.45 13,8 L13,12 C13,12.55 12.55,13 12,13 Z M13,17 L11,17 L11,15 L13,15 L13,17 Z">
                                <Path.ToolTip>
                                    <ToolTip  x:Name="tt_errorBranch"  Content="Name Not Validate"  Style="{StaticResource ToolTipError}"/>
                                </Path.ToolTip>
                            </Path>
                        </Grid>

                    </Grid>
                </Border>

                <Border BorderThickness="0"  Grid.Column="0" Grid.ColumnSpan="1" Grid.Row="3"   Height="70" Margin="10,10,10,10"
                    CornerRadius="7" BorderBrush="Black" Background="#FFA926" Padding="0" x:Name="brd_count">
                    <StackPanel Orientation="Horizontal" Margin="5,0" >
                        <TextBlock Text="Count" x:Name="txt_count" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left" 
                               Margin="2,2,5,2" FontSize="22"/>
                        <TextBlock  Grid.Column="1" Margin="0" FontWeight="Bold" FontSize="22"  VerticalAlignment="Center"
                                        TextAlignment="Center" Name="tb_count" Foreground="White" HorizontalAlignment="Right" >

                        </TextBlock>
                    </StackPanel>
                </Border>

            </Grid>

            <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Margin="0,5,0,5" >
                <Grid.RowDefinitions >
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Border BorderThickness="0"   Grid.Column="0" Grid.Row="0"    Margin="5,10,5,5"
                    CornerRadius="7" BorderBrush="Black" Background="White" Padding="0">
                    <Grid   Margin="0" >
                        <Grid.RowDefinitions >
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Barcode" x:Name="txt_barcode" Foreground="#178DD2" FontWeight="Bold" FontSize="18"  
                                     VerticalAlignment="Center" 
                                       HorizontalAlignment="Left" Margin="10,5,5,5"/>
                        <Grid  Margin="5" Grid.Row="3"   >
                            <TextBox x:Name="tb_barcode"  Text="{Binding discount, Mode=OneWay}"
                                       Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                             Grid.Row="2" Padding="10,0,5,0"
                                    materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}"
                                     MaxLength="20" 
                                            BorderThickness="1"  materialDesign:HintAssist.Hint="Barcode..."  
                                            Foreground="#4E4E4E"  TextBlock.FontSize="12" Background="#f8f8f8"
                                            BorderBrush="#f8f8f8"
                                            Grid.Column="1"  Height="40"    />

                            <Path Fill="#E81123" Stretch="Fill" Margin="5,5,25,5"
                                            HorizontalAlignment="Right" Grid.Column="2"  Visibility="Collapsed"   
                                            VerticalAlignment="Center" Width="15"  Height="15"
                                            Data="M12,2 C6.48,2 2,6.48 2,12 C2,17.52 6.48,22 12,22 C17.52,22 22,17.52 22,12 C22,6.48 17.52,2 12,2 Z M12,13 C11.45,13 11,12.55 11,12 L11,8 C11,7.45 11.45,7 12,7 C12.55,7 13,7.45 13,8 L13,12 C13,12.55 12.55,13 12,13 Z M13,17 L11,17 L11,15 L13,15 L13,17 Z">
                                <Path.ToolTip>
                                    <ToolTip  Content="Name Not Validate"  Style="{StaticResource ToolTipError}"/>
                                </Path.ToolTip>
                            </Path>
                        </Grid>

                    </Grid>
                </Border>
               
            </Grid>
            <Grid Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" Margin="0,5,0,5">
                <Grid.RowDefinitions >
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Border BorderThickness="0"   Grid.Column="0" Grid.Row="0"    Margin="10,10,5,5"
                    CornerRadius="7" BorderBrush="Black" Background="White" Padding="0">
                    <Grid   Margin="0" >
                        <Grid.RowDefinitions >
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Receipt of Purchases Bill" x:Name="txt_titleDataGridInvoice" Foreground="#178DD2" FontWeight="Bold" FontSize="18"  
                                     VerticalAlignment="Center" 
                                       HorizontalAlignment="Left" Margin="10,10,5,5"/>
                        <DataGrid x:Name="dg_billDetails"  Margin="5,5" Grid.Row="1"   Grid.ColumnSpan="2"    Background="White"
                      materialDesign:DataGridAssist.CornerRadius="5" Visibility="Visible"
                         IsReadOnly="False" CanUserAddRows="False"  
                        AutoGenerateColumns="False" CellEditEnding="Dg_billDetails_CellEditEnding"
                        ColumnWidth="SizeToHeader"   >
                            <DataGrid.Resources>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"></SolidColorBrush>
                                <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                                    <Setter Property="Background" Value="#e7f3fa" />
                                    <Setter Property="BorderBrush" Value="White"/>
                                    <Setter Property="BorderThickness" Value="0 0 1 0"/>
                                </Style>

                                <converters:unitItemsListConverter x:Key="unitItemsListConverter"/>
                                <converters:unitItemsComboTagConverter x:Key="unitItemsComboTagConverter"/>
                            </DataGrid.Resources>
                            <DataGrid.Columns >
                                <DataGridTemplateColumn Width="20" Header="" IsReadOnly="True" >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Margin="-10"   Click="deleteRowFromInvoiceItems"
                                                   Padding="0" ToolTip="Delete" 
                          Background="{x:Null}" BorderBrush="{x:Null}">
                                                <materialDesign:PackIcon Foreground="#178DD2" Kind="MinusThick"  
                              HorizontalAlignment="Center" Grid.Column="0"  
                         VerticalAlignment="Center" Width="17" Height="17"/>
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn IsReadOnly="True" Width="*"  Header="Num"  Binding="{Binding Path=ID}"/>
                                <DataGridTextColumn IsReadOnly="True"  Width="*"   Header="Item" Binding="{Binding Path=Product}"/>
                                <DataGridTemplateColumn Header="Unit"  Width="*" >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox SelectionChanged="Cbm_unitItemDetails_SelectionChanged" 
                                                              Tag="cbm_unitItemDetails" 
                                                              x:Name="cbm_unitItemDetails"
                                                              ItemsSource="{Binding itemId,Converter={StaticResource unitItemsListConverter}}"
                                                              DisplayMemberPath="mainUnit" 
                                                              SelectedValuePath="itemUnitId"
                                                              SelectedItem="{Binding Unit}"
                                                />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn  Header="Amount"  Width="*"  Binding="{Binding Path=Count}"/>
                                <DataGridTextColumn  Header="Price"  Width="*"  Binding="{Binding Path=Price}"/>
                                <DataGridTextColumn IsReadOnly="True"  Width="*"  Header="Total" Binding="{Binding Path=Total}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Separator Margin="5,0" Grid.Row="2"  Background="#DFDFDF" VerticalAlignment="Center" Width="auto" />

                        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,5">
                            <TextBlock Grid.Row="0"  Text="SUM" x:Name="txt_sum" Foreground="#178DD2" FontWeight="Bold" FontSize="18"  
                                  VerticalAlignment="Center"   
                                       HorizontalAlignment="Left" Margin="10,5,5,5"/>
                            <!--Text="{Binding total, Mode=OneWay}"-->
                            <TextBlock Grid.Row="1"   x:Name="tb_sum" Grid.Column="1" Margin="10,5,0,5" 
                       Foreground="#4E4E4E" Text="{Binding total, Mode=OneWay}"
                        HorizontalAlignment="Left" VerticalAlignment="Center"
                                  FontWeight="Bold"  FontSize="12"/>
                            <TextBlock Grid.Row="1"   x:Name="tb_moneyIcon" Grid.Column="1" Margin="0,0,5,0"  
                       Foreground="#4E4E4E" Text="$"
                        HorizontalAlignment="Left" VerticalAlignment="Center"
                                  FontWeight="Bold"  FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Border BorderThickness="0"  Grid.Column="0" Grid.Row="1"  Height="35"   Margin="10,10,5,10"
                    CornerRadius="7" BorderBrush="Black" Background="#178DD2" Padding="0">
                    <Button Content="Input/Save" Height="auto" BorderBrush="{x:Null}"  FontSize="14" x:Name="btn_save"
                    Background="{x:Null}" Click="Btn_save_Click"  />
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>




</UserControl>
