<UserControl x:Class="POS.controlTemplate.UC_rectangleCardPrice"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POS.controlTemplate"
             mc:Ignorable="d" 
             Height="130" Width="240" 
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <Storyboard x:Key="Storyboard1">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="rectangle">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="0.3"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </UserControl.Resources>
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="UIElement.MouseEnter" SourceName="rectangle">
            <BeginStoryboard x:Name="Storyboard1_BeginStoryboard" Storyboard="{StaticResource Storyboard1}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseLeave" SourceName="rectangle">
            <RemoveStoryboard BeginStoryboardName="Storyboard1_BeginStoryboard"/>
        </EventTrigger>

    </UserControl.Triggers>
    <Grid  ForceCursor="true" Cursor="Hand">
        <Border  CornerRadius="10" BorderBrush="{Binding rectangleCardPriceBorderBrush }" 
             BorderThickness="1.2"
                    Background="White">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.1*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid  Margin="5" >
                    <Grid.RowDefinitions >
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="34"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="44"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="1" Margin="5,0"
                   FontWeight="Bold" 
                    Text="{Binding rectangleCardPriceTitleText}" Foreground="Black"
              HorizontalAlignment="Left" VerticalAlignment="Center"
               FontSize="12" TextWrapping="Wrap"/>
                    <TextBlock Grid.Row="2" Margin="5,0" TextWrapping="Wrap"
                   FontFamily="{StaticResource Font-SF-Pro-Display-Regular}" 
                    Text="{Binding rectangleCardPriceSubtitleText}" Foreground="#6e6e6e"
              HorizontalAlignment="Left" VerticalAlignment="Center"
               FontSize="10"/>
                    <Grid Grid.Row="3" Width="70" Height="25"
                      HorizontalAlignment="Left" VerticalAlignment="Bottom"
                     Margin="5,0,5,8">
                        <Rectangle Fill="#178DD2" RadiusY="4" RadiusX="4"   />
                        <TextBlock  FontWeight="Bold"
                    Text="{Binding rectangleCardPricePriceTitle}" Foreground="White"
              HorizontalAlignment="Center" VerticalAlignment="Center"
              FontSize="14"/>
                    </Grid>
                </Grid>
                <Image FlowDirection="LeftToRight"  Grid.Column="1"  Source="{Binding rectangleCardPriceImageSource}" Margin="0,5,5,5" />
                <Path Fill="#FFA926" Stretch="Fill" x:Name="path_new" Grid.ColumnSpan="2"
                      Visibility="{Binding rectangleCardPriceNew}"
                          Width="18" Height="18" VerticalAlignment="Bottom" 
                      HorizontalAlignment="Right"
                      Margin="0,0,5,5" 
