	c-21.8,11.5-43.6,23-65.5,34.5C181.6,356.7,181,357,179.7,357.6z"/>
                <Grid Grid.ColumnSpan="2" Height="130" Visibility="{Binding rectangleCardPriceOffer}" FlowDirection="RightToLeft">
                    <Grid Margin="-13,10,0,0" 
                    Height="16" Width="86" RenderTransformOrigin="0.5,0.5" 
                      VerticalAlignment="Top" HorizontalAlignment="Left" >
                        <Grid.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-35"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Grid.RenderTransform>
                        <Rectangle Fill="#D20707" />
                        <TextBlock  Margin="0"
                                    FontWeight="Bold"
                    Text="Offer" Foreground="#FFFD00"
              HorizontalAlignment="Center" VerticalAlignment="Center"
              FontSize="10"/>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
        <Rectangle x:Name="rectangle" Grid.RowSpan="2" 
                       Fill="#99F0F8FF" Opacity="0" 
                       RadiusX="10" RadiusY="10" />
    </Grid>


</UserControl>

