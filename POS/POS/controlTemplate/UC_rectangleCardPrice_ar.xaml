<UserControl x:Class="POS.controlTemplate.UC_rectangleCardPrice_ar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POS.controlTemplate"
             mc:Ignorable="d" 
            Height="130" Width="240" 
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <Storyboard x:Key="Storyboard1">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="rectangle">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="0.3"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </UserControl.Resources>
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="UIElement.MouseEnter" SourceName="rectangle">
            <BeginStoryboard x:Name="Storyboard1_BeginStoryboard" Storyboard="{StaticResource Storyboard1}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseLeave" SourceName="rectangle">
            <RemoveStoryboard BeginStoryboardName="Storyboard1_BeginStoryboard"/>
        </EventTrigger>

    </UserControl.Triggers>
    <Grid FlowDirection="LeftToRight">
        <Border  CornerRadius="10" BorderBrush="{Binding rectangleCardPriceBorderBrush_ar }" 
             BorderThickness="1.2"
                    Background="White">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.2*"/>
                </Grid.ColumnDefinitions>
                <!--{Binding ButtonImageSource}-->
                <Grid  Margin="5,0" Grid.Column="1" >
                    <Grid.RowDefinitions >
                        <RowDefinition Height="7"/>
                        <RowDefinition Height="37"/>
                        <RowDefinition Height="36"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <!--{Binding ButtonTitleText}-->
                    <TextBlock Grid.Row="1" Margin="5,0"
                   FontFamily="{StaticResource Font-cairo-bold}" 
                    Text="{Binding rectangleCardPriceTitleText_ar}" Foreground="Black"
              HorizontalAlignment="Right" VerticalAlignment="Center"
               FontSize="12" TextWrapping="Wrap" TextAlignment="Right"/>
                    <!--"{Binding ButtonSubtitleText}"-->
                    <TextBlock Grid.Row="2" Margin="5,0" TextWrapping="Wrap"
                   FontFamily="{StaticResource Font-NotoKufiArabic-Regular}" 
                    Text="{Binding rectangleCardPriceSubtitleText_ar}" Foreground="#6e6e6e"
              HorizontalAlignment="Right" VerticalAlignment="Center"
               FontSize="10" TextAlignment="Right"/>
                    <Grid Grid.Row="3" Width="70" Height="25"
                      HorizontalAlignment="Right" VerticalAlignment="Bottom"
                      Margin="5,0,5,8">
                        <Rectangle Fill="#178DD2" RadiusY="4" RadiusX="4"   />
                        <!--{Binding ButtonPriceTitle}-->
                        <TextBlock  
                   FontFamily="{StaticResource Font-cairo-bold}" 
                    Text="{Binding rectangleCardPricePriceTitle_ar}" Foreground="White"
              HorizontalAlignment="Center" VerticalAlignment="Center"
              FontSize="14"/>
                    </Grid>
                </Grid>
                <!--<Image FlowDirection="LeftToRight"  Grid.Column="0"  Source="{Binding rectangleCardPriceImageSource_ar}" Margin="5,5,0,5" />-->
                <Grid Margin="5,5,0,5" Height="108" Width="108"  >
                    <Button FlowDirection="LeftToRight"   Grid.Column="0"  VerticalAlignment="Center" HorizontalAlignment="Center"
                        Padding="0"   Height="110" Width="110"      BorderThickness="0" x:Name="btn_cardImage" >
                        <Button.Background>
                            <ImageBrush  Stretch="Fill"   ImageSource="/pic/no-image-icon-125x125.png"   />
                        </Button.Background>
                    </Button>
                </Grid>
                
                <!--<Image Grid.Column="0"  Source="/pic/EPSON-thermal-printer4.png" Margin="5,5,0,5" />-->
                <Path Fill="#FFA926" Stretch="Fill" x:Name="path_new" Visibility="{Binding rectangleCardPriceNew_ar}"
                          Width="18" Height="18" VerticalAlignment="Bottom" HorizontalAlignment="Left"
                      Margin="5,0,0,5"
