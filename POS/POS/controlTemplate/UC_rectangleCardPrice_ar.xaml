                <Grid Height="130" Visibility="{Binding rectangleCardPriceOffer_ar}">
                    <Grid Margin="-13,10,0,0"
                    Height="16" Width="86" RenderTransformOrigin="0.5,0.5" 
                      VerticalAlignment="Top" HorizontalAlignment="Left" >
                        <Grid.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-35"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Grid.RenderTransform>
                        <Rectangle Fill="#D20707" />
                        <TextBlock  Margin="0"
                   FontFamily="{StaticResource Font-cairo-bold}" 
                    Text="عــرض" Foreground="#FFFD00"
              HorizontalAlignment="Center" VerticalAlignment="Center"
              FontSize="9"/>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
        <Rectangle x:Name="rectangle" Grid.RowSpan="2" 
                       Fill="#99F0F8FF" Opacity="0" 
                       RadiusX="10" RadiusY="10" />
    </Grid>
</UserControl>
